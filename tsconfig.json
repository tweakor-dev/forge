{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "./packages",
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["packages/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
